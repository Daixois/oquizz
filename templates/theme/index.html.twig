{% extends 'base.html.twig' %}

{% block title %}Hello ThemeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Quizz par cat√©gorie</h1>

		{{ dump(rootThemes) }}


		<div class="card-group">
			{% for rootTheme in rootThemes %}
				<h2>{{ rootTheme.name }}</h2>

				{% for enfant in rootTheme.themes %}


					<div class="card">
						<img src="https://via.placeholder.com/200x150.png" class="card-img-top" alt="...">
						<div class="card-body">
							<h5 class="card-title">{{ enfant.name }}</h5>
							<p class="card-text">
								<small class="text-muted">Last updated 3 mins ago</small>
							</p>
						</div>
					</div>
				{% endfor %}

			{% endfor %}
		</div>
	</div>
{% endblock %}
