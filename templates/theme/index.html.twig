{% extends 'base.html.twig' %}

{% block title %}Hello ThemeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Hello</h1>

		{{ dump(themes) }}

		<ul>
			{% for theme in themes %}
				<li>{{ theme.name }}
					-

					{% for parent in theme.themeParent %}
						{{ parent.name }}
					{% endfor %}
				</li>
			</li>
		</ul>
	{% endfor %}
</ul></div>{% endblock %}
