{% extends 'base.html.twig' %}

{% block title %}Hello ThemeController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Quizz de la cat√©gories :
			{{ theme.name }}</h1>
		<ul>
		
			{% for quizz in theme.quizz %}
				<div class="card" style="width: 18rem;">
					<img class="card-img-top" src="..." alt="Card image cap">
					<div class="card-body">
						<li>
							<a href={{ path('quizz_show', {id : quizz.id } ) }}>{{ quizz.name }}</a>
						</li>
					</div>
				</div>  
			{% endfor %} 
	                       
		</ul>

	</div>
{% endblock %}
