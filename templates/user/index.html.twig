{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <br />
    <h1>User index</h1>
    <br />
    <br />
    <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Login</th>
                    <th>Email</th>
                    <th>Roles</th>
                    {# <th>Password</th> #}
                    <th>Created_At</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.login }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    {# <td>{{ user.password }}</td> #}
                    <td>{{ user.CreatedAt ? user.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
                    <td>
                        <a href="{{ path('user_profil', {'id': user.id}) }}">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <br />
    <br />
    <p><a class="btn btn-success m-2" href="{{ path('user_new') }}" role="button"> Cr√©er un nouvel utilisateur </a></p>
    <br />
    <br />
{% endblock %}
