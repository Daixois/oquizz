{% extends 'base.html.twig' %}
{% block stylesheets %}
{{parent()}} <link rel="stylesheet" href="{{ asset('css/profil.css')}}">
{% endblock %}

{% block title %}Profil de {{ user.login }}{% endblock %}

{% block body %}


	<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          <nav aria-label="breadcrumb" class="main-breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
              <li class="breadcrumb-item active" aria-current="page">User Profile</li>
            </ol>
          </nav>
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  {% if app.user.imageurl is empty %}
                    <img src="{{ asset('img/pngLogo.png') }}" class="mt-5 avatar mb-3">
                  {% else %}
                    <img src="{{ asset('uploads/'~ user.imageurl) }}" alt="Admin" class="avatar">
                  {% endif %}
                    <div class="mt-3">
                      <h4>{{ user.login }}</h4>
                      <p class="text-secondary mb-1">O'Clock Student</p>
                      <p class="text-muted font-size-sm">Partout en France </p>
                      <button class="btn btn-primary">Follow</button>
                  
                    </div>
                  </div>
                </div>
              </div>
              <div class="card mt-3">
<div class="flex-wrapper">
  <div class="single-chart">
    <svg viewBox="0 0 36 36" class="circular-chart orange">
      <path class="circle-bg"
        d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831"
      />
      <path class="circle"
        stroke-dasharray="30, 100"
        d="M18 2.0845
          a 15.9155 15.9155 0 0 1 0 31.831
          a 15.9155 15.9155 0 0 1 0 -31.831"
      />
      <text x="18" y="20.35" class="percentage">30%</text>
    </svg>
  </div>

  
</div>
      
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ user.login }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      {{ user.email }}
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <a class="btn btn-info" href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="row gutters-sm">
                <div class="col-sm">
                  <div class="card h-100">
                    <div class="card-body">
                      <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Historique</i></h6>
					  {% for historic in historic %}
						  
					
                      <small><a href="{{ path('quizz_show', {id: historic.quizz.id } ) }}">{{historic.quizz}} </a> </small>
                      <div class="progress mb-3" style="">
                        <div class="progress-bar bg-primary" role="progressbar" style="width: {{(historic.score / historic.outOf)*100}}%" aria-valuenow="{{(historic.score / historic.outOf)*100}}" aria-valuemin="0" aria-valuemax="100">{{historic.score}} / {{historic.outOf}}</div>
                      </div>
                        {% endfor %}
                    </div>
                  </div>
                </div>
              </div>
			</div>
          </div>
		</div>
    </div>
	
{% endblock %}
