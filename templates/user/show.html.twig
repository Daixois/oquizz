{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.login }}</h1>

    
    <div class="card mb-3" style="max-width: 540px;" id="profil">
  <div class="row g-0">
    <div class="col-md-4 ">
      <img src="{{ asset('avatars/person-circle.svg')}}" class="img-fluid rounded-start" alt="..." id="avatar">
    </div>
    <div class="col-md-8">
      <div class="card-body">
       <p class="card-text"><th>Login : </th>
                <td>{{ user.login }}</td></p>
        {# <p class="card-text"><th>Email : </th>
                <td>{{ user.email }}</td></p> #}
        <p class="card-text"><th>Date d'inscription :</th>
                <td>{{ user.CreatedAt ? user.CreatedAt|date('d-m-Y') : '' }}</td></p>
                 <p class="card-text"><th>Amis :</th>
                {%for friends in user.friends%}
                <td>{{friends.login}}
                 </td>   
                {% endfor %}</p>
      </div>
    </div>
  </div>
</div>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
