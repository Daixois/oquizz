            <label class="btn btn-outline-success quizzbutton" for="option3">Réponse 3</label>
        </div>
        <div class="col-lg-6 col-lg-push-6 col-sm-12">
            <input type="radio" class="btn-check" name="options" id="option4" autocomplete="off">
            <label class="btn btn-outline-success quizzbutton" for="option4">Réponse 4</label>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary quizzbutton">Valider la réponse !</button>

</div>
</div>
