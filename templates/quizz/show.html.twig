{% extends 'base.html.twig' %}

{% block title %}Hello QuizzController!
{% endblock %}

{% block body %}
	<section class="text-center container">
		<div class="row">
			<div class="col-lg-6 col-md-8 mx-auto">
				<h1 class="fw-light">{{quizz.name}}</h1>
			</div>
		</div>
	</section>


	<div class="container">
		<p>
			<a href="{{path('home')}}">Retour à l'accueil</a>
		</p>

		<div class="container d-grid mx-auto">
			{{ question.question }}

			<form action={{ path('quizz_show', {id: quizz.id } ) }} method="POST">
				<div class="row">

					{% for proposition in question.propositions|oShuffle %}


						<div class="col-lg-6 col-sm-12">
							<input onclick="enableButton()" type="radio" class="btn-check btn-lg" name="options" value="{{proposition.id}}" id="{{proposition.id}}" autocomplete="off">
							<label class="btn btn-outline-success quizzbutton" for="{{proposition.id}}">{{proposition.text}}</label>
						</div>
					{% endfor %}

				</div>
				<br/>
				<button id="bt" type="submit" disabled="enabled" class="btn btn-primary quizzbutton">Valider la réponse !</button>
			</form>
		</div>
	</div>
</div>
{% block javascript %}
	<script>
		function enableButton() {
document.getElementById("bt").disabled = false;
}
	</script>
{% endblock %}{% endblock %}
