{% for rootTheme in rootThemes %}
	<h2>
		<a href={{ path('theme_show', {id : rootTheme.id} ) }}>
			{{ rootTheme.name }}
		</a>
	</h2>

<div class="row row-cols-1 row-cols-md-2 g-4">
	{% for theme in rootTheme.themes %}
		<div class="col">
			<div class="card">
				<a href={{ path('theme_show', {id : theme.id} ) }}><img src="https://via.placeholder.com/300x140.png" class="card-img-top" alt="..."></a>
				<div class="card-body">
					<h5 class="card-title">
						<a href={{ path('theme_show', {id : theme.id} ) }}>
							{{ theme.name }}
						</a>
					</h5>
					<p class="card-text">
						<small class="text-muted">Last updated 3 mins ago</small>
					</p>
				</div>
			</div>
		</div>
	{% endfor %}
{% endfor %}
</div>

